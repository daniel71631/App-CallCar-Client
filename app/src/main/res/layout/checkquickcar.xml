<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="256dp"
        android:text="確定要使用快速叫車功能?"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnmapyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnmapno"
        android:layout_alignBottom="@+id/btnmapno"
        android:layout_alignStart="@+id/textView25"
        android:layout_marginStart="42dp"
        android:text="是" />

    <Button
        android:id="@+id/btnmapno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView25"
        android:layout_below="@+id/textView25"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="93dp"
        android:text="否" />

</RelativeLayout>