<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話叫車"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/btnmapyes"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:background="@mipmap/contacts"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/btnmapno" />

    <Button
        android:id="@+id/btnmapno"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@mipmap/carstorephone"
        android:layout_marginStart="105dp"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/btnmapyes"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnmapyes"
        android:layout_alignBottom="@+id/btnmapyes"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/btnmapyes"
        android:text="通訊錄"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="車行電話"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/btnmapno"
        android:layout_alignStart="@+id/textView19" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="29dp"
        app:srcCompat="@mipmap/callcar3"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnmapyes" />
</RelativeLayout>