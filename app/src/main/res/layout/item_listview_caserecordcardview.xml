<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view2"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtmapdriverlist_drivername"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView23"
            android:layout_alignBottom="@+id/textView23"
            android:layout_toEndOf="@+id/textView23" />

        <TextView
            android:id="@+id/txtmapdriverlist_distance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView24"
            android:layout_alignBottom="@+id/textView24"
            android:layout_alignStart="@+id/txtmapdriverlist_drivername" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司機名稱"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:layout_below="@+id/txtitemCaseNum"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtmapdriverlist_drivername"
            android:layout_marginTop="24dp"
            android:text="乘車時間"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtitemCaseFares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtitemCaseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/txtitemCaseFares"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtcase_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtmapdriverlist_drivername"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtitem_OffTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtitemCaseNum"
            android:layout_alignTop="@+id/txtcase_id"
            android:text="TextView"
            android:visibility="invisible" />

    </RelativeLayout>

</android.support.v7.widget.CardView>