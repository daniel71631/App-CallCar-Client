<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/tbtnMen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:allowUndo="false"
        android:background="@drawable/togglebutton_no"
        android:checked="false"
        android:elevation="0dp"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "
        android:layout_marginTop="22dp"
        android:layout_marginStart="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtCheckKind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="男"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tbtnMen"
        android:layout_alignStart="@+id/tbtnMen"
        android:layout_alignEnd="@+id/tbtnMen" />

    <ToggleButton
        android:id="@+id/tbtnWomen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tbtnMen"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/tbtnMen"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "
        android:background="@drawable/togglebutton_no" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtCheckKind"
        android:layout_alignEnd="@+id/tbtnWomen"
        android:layout_alignStart="@+id/tbtnWomen"
        android:text="女"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</RelativeLayout>