<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.try_loggin.Register2Activity">

    <EditText
        android:id="@+id/enametxt"
        android:width="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:ems="10"
        android:hint="姓名"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enametxt"
        android:layout_below="@+id/enametxt"
        android:layout_marginTop="49dp"
        android:text="性別"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ebirthtxt"
        android:layout_toEndOf="@+id/txt2"
        android:layout_marginStart="48dp" />

    <EditText
        android:drawableEnd="@mipmap/spinner_launcher"
        android:id="@+id/ebirthtxt"
        android:width="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="生日"
        android:inputType="date"
        android:layout_below="@+id/txt2"
        android:layout_alignStart="@+id/txt2" />

    <EditText
        android:id="@+id/ephonetxt"
        android:width="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="手機"
        android:inputType="phone"
        android:layout_below="@+id/ebirthtxt"
        android:layout_alignStart="@+id/ebirthtxt" />

    <Button
        android:id="@+id/btnqcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="註冊"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>
