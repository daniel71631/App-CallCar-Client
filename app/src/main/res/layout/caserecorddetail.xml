<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="訂單紀錄詳細資訊"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="36sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/cardView"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView32"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:text="司機名稱"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView32"
                android:layout_marginTop="31dp"
                android:text="上車時間"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="下車時間"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView37"
                android:layout_marginTop="32dp"
                android:text="價錢"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverCarKindDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtMapDriverAgeDetail"
                android:layout_alignTop="@+id/textView39"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverAgeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtMapDriverSexDetail"
                android:layout_alignTop="@+id/textView37"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView33"
                android:layout_marginStart="36dp"
                android:layout_toEndOf="@+id/textView32"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverSexDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView33"
                android:layout_alignBottom="@+id/textView33"
                android:layout_alignStart="@+id/txtMapDriverNameDetail"
                android:text="TextView"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:text="查看路線"
                android:layout_below="@+id/txtMapDriverCarKindDetail"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>