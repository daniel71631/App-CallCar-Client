<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="司機詳細資訊"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewMapDriverDetail"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView32"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView33"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="23dp"
                android:text="司機名稱"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView32"
                android:layout_marginTop="31dp"
                android:text="司機性別"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView33"
                android:layout_marginTop="30dp"
                android:text="司機年齡"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView37"
                android:layout_marginTop="32dp"
                android:text="車種"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverCarKindDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtMapDriverAgeDetail"
                android:layout_alignTop="@+id/textView39"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverAgeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView37"
                android:layout_alignBottom="@+id/textView37"
                android:layout_alignStart="@+id/txtMapDriverSexDetail"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView33"
                android:layout_marginStart="36dp"
                android:layout_toEndOf="@+id/textView32"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverSexDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView33"
                android:layout_alignBottom="@+id/textView33"
                android:layout_alignStart="@+id/txtMapDriverNameDetail"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView39"
                android:layout_marginTop="23dp"
                android:text="車齡"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverCarAgeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView40"
                android:layout_alignStart="@+id/txtMapDriverCarKindDetail"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView40"
                android:layout_marginTop="26dp"
                android:text="品牌"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverCarBrandDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView44"
                android:layout_alignStart="@+id/txtMapDriverCarAgeDetail"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView44"
                android:layout_marginTop="24dp"
                android:text="車的顏色"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMapDriverCarColorDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView48"
                android:layout_alignBottom="@+id/textView48"
                android:layout_alignStart="@+id/txtMapDriverCarBrandDetail"
                android:text="TextView"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewMapDriverDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="是否查看司機報價"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btnMapCarYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView41"
        android:layout_marginStart="45dp"
        android:text="是" />

    <Button
        android:id="@+id/btnMapCarNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView41"
        android:layout_marginEnd="44dp"
        android:text="否" />

</RelativeLayout>