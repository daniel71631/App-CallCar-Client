<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.try_loggin.changepasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="52dp"
        android:theme="?attr/actionBarTheme" />

    <EditText
        android:id="@+id/etxt1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:hint="舊密碼"
        android:inputType="textPassword"
        android:layout_below="@+id/tbar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etxt2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="新密碼"
        android:inputType="textPassword"
        android:layout_below="@+id/etxt1"
        android:layout_alignStart="@+id/etxt1" />

    <EditText
        android:id="@+id/etxt3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="確認密碼"
        android:inputType="textPassword"
        android:layout_below="@+id/etxt2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnmapyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="儲存"
        android:textSize="18sp" />
</RelativeLayout>
