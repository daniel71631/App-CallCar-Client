<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wallet_holo_blue_light"
        android:orientation="vertical">


        <TextView
            android:id="@+id/reservetime"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:layout_toEndOf="@+id/textView23"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/reservedes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView24"
            android:layout_alignBottom="@+id/textView24"
            android:layout_toEndOf="@+id/textView24"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/reservedate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reserveid"
            android:layout_alignBottom="@+id/reserveid"
            android:layout_alignParentStart="true"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
            android:visibility="visible" />

        <TextView
            android:id="@+id/reservelocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reserveid"
            android:layout_alignBottom="@+id/reserveid"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/reserveid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reservedes"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/reservelocation"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/reservetime"
            android:text="預約時間:"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reservetime"
            android:layout_alignBottom="@+id/reservetime"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/reservetime"
            android:text="目的地:"
            android:textColor="@color/cardview_light_background" />

    </RelativeLayout>

</android.support.v7.widget.CardView>