<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/tbtnStyle0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/togglebutton_no"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "/>

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tbtnStyle0"
        android:layout_below="@+id/tbtnStyle0"
        android:layout_marginTop="18dp"
        android:text="小客車"
        android:textAlignment="center" />

    <ToggleButton
        android:id="@+id/tbtnStyle1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tbtnStyle0"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/textView70"
        android:background="@drawable/togglebutton_no"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "/>

    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tbtnStyle1"
        android:layout_alignStart="@+id/tbtnStyle1"
        android:layout_alignTop="@+id/textView70"
        android:text="跑車"
        android:textAlignment="center" />

    <ToggleButton
        android:id="@+id/tbtnStyle2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tbtnStyle1"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/tbtnStyle1"
        android:background="@drawable/togglebutton_no"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "/>

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tbtnStyle2"
        android:layout_alignTop="@+id/textView71"
        android:text="無障礙車" />

    <ToggleButton
        android:id="@+id/tbtnStyle3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tbtnStyle2"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textView72"
        android:background="@drawable/togglebutton_no"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "/>

    <TextView
        android:id="@+id/textView73"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tbtnStyle3"
        android:layout_alignTop="@+id/textView72"
        android:text="廂型車" />
</RelativeLayout>